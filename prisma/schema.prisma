generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 用戶學習進度表
model UserProgress {
  id                   String   @id @default(cuid())
  clerkUserId         String   
  courseId            Int      
  articleSlug         String   
  tryitUnlockedCount  Int      @default(0) // TryIt 解鎖的數量
  bossCompleted       Boolean  @default(false) // Boss 是否完成
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // 每個用戶在每個文章中的進度唯一
  @@unique([clerkUserId, courseId, articleSlug])
  @@map("user_progress")
}

// 程式碼提交記錄表
model CodeSubmission {
  id           String   @id @default(cuid())
  clerkUserId  String
  courseId     Int
  articleSlug  String
  componentType String  // "tryit" 或 "boss"
  componentId  String   // TryIt 的 id 或 Boss 的識別
  code         String   @db.Text
  isSuccessful Boolean  @default(false)
  submittedAt  DateTime @default(now())

  // 關聯到 Boss 測試結果
  bossTestResults BossTestResult[]

  @@index([clerkUserId])
  @@index([courseId, articleSlug])
  @@map("code_submissions")
}

// Boss 測試結果表
model BossTestResult {
  id              String   @id @default(cuid())
  submissionId    String
  testCaseIndex   Int
  passed          Boolean
  expectedOutput  String?  @db.Text
  actualOutput    String?  @db.Text
  errorMessage    String?  @db.Text
  createdAt       DateTime @default(now())

  // 關聯到程式碼提交
  submission CodeSubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  @@index([submissionId])
  @@map("boss_test_results")
}
